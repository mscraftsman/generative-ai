{
  "name": "C# (.NET 10)",
  "image": "mcr.microsoft.com/devcontainers/dotnet:1-8.0-jammy",
  "features": {
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "10.0",
      "additionalVersions": "9.0"
    }
  },
  "postCreateCommand": "dotnet dev-certs https --trust && dotnet --list-sdks && dotnet restore && echo 'Available .NET SDKs installed successfully!'",
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-dotnettools.csdevkit"
      ],
      "settings": {
        "dotnet.defaultSolution": "GenerativeAI.sln"
      }
    }
  },
  "portsAttributes": {
    "5000": {
      "onAutoForward": "notify"
    },
    "5001": {
      "protocol": "https"
    }
  },
  "forwardPorts": [
    5000,
    5001
  ]
}